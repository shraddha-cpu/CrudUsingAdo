
@{
    ViewData["Title"] = "List";
}

<h3>List</h3>
<p>
    @Html.ActionLink("Add Emp","Create","Employee")
</p>
<table class="table table-bordered">
    <tr>
        <th>Emp Id</th>
        <th>Emp Name</th>
        <th>Emp Salary</th>
        <th>Action</th>
    </tr>
    @foreach (Employee item in ViewBag.EmployeeList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>
                @Html.ActionLink("Edit","Edit",new {@id=item.Id}) |
                @Html.ActionLink("Delete","Delete",new {@id=item.Id}) |
                @Html.ActionLink("View","Details",new {@id=item.Id})
            </td>
        </tr>
    }
</table>



